<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_job"
    tools:context=".JobSkillActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">
        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sn_skill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="15dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:spinnerMode="dropdown" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/sn_experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:paddingTop="15dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:spinnerMode="dropdown" />
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btCancel_Skill"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/ic_delete"
                android:background="@drawable/ripple"
                android:padding="10dp"
                android:text="Hủy"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btSave_Skill"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/ic_save_ac"
                android:background="@drawable/ripple"
                android:padding="10dp"
                android:text="Lưu"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>