<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".JobDetail"
    tools:showIn="@layout/app_bar_jobdetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#039BE5"
                android:gravity="center"
                android:padding="10dp"
                android:text="Mô tả công việc"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvJob_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="What You Will Do
WHAT YOU'LL BE RESPONSIBLE FOR:
•	Design and build advanced applications for the Windows Phone platform
•	Collaborate with cross-functional teams to define, design, and ship new features
•	Work with outside data sources and API’s"
                android:textColor="#616161" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#039BE5"
                android:gravity="center"
                android:padding="10dp"
                android:text="Yêu cầu công việc"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvJob_detail_require"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="What You Are Good At
WHAT WE NEED:
•	Bachelor Degree in Information Technology, Computer Science, or equivalent
•	3-4 years of relevant working experience
•	Knowledge:
o	Programming languages: C/C++"
                android:textColor="#616161" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#039BE5"
                android:gravity="center"
                android:padding="10dp"
                android:text="Lợi ích"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvJob_detail_benifit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="What You Are Good At
WHAT WE NEED:
•	Bachelor Degree in Information Technology, Computer Science, or equivalent
•	3-4 years of relevant working experience
•	Knowledge:
o	Programming languages: C/C++"
                android:textColor="#616161" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#039BE5"
                android:gravity="center"
                android:padding="10dp"
                android:text="Liên hệ"
                android:textColor="@android:color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvJob_detail_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Mr. Chung
job@vdata.vn
Lầu 3, Tòa Nhà Ereka, Số 17 Hồ Bá Kiện, Phường 15, Quận 10
19006605
0903230390"
                android:textColor="#616161" />

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Nguồn:" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tvJob_detail_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:linksClickable="true"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:text="google.com.vn"
                android:textColor="@android:color/holo_blue_dark" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>