<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorbackgroupwhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.internal.widget.ListViewCompat
        android:id="@+id/lv_edit_skill_job_profile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:clipToPadding="true"
        android:dividerHeight="1.0dip"
        android:listSelector="@android:color/transparent"
        android:padding="10.0dip"
        android:scrollbars="none"
        android:soundEffectsEnabled="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:weightSum="2.0">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btCancel_job_edit_list_skill"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ripple"
            android:padding="10.0dip"
            android:paddingTop="5.0dip"
            android:text="Hủy"
            android:textColor="@color/colorPrimary"
            android:textSize="20.0dip" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btSave_job_edit_list_skill"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10.0dip"
            android:layout_weight="1.0"
            android:background="@drawable/ripple"
            android:padding="10.0dip"
            android:paddingTop="5.0dip"
            android:text="Lưu"
            android:textColor="@color/colorPrimary"
            android:textSize="20.0dip" />
    </LinearLayout>
</LinearLayout>