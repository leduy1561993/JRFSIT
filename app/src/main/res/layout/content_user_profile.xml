<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/colorbackgroupwhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="15.0dip"
            android:background="@color/colorItemList"
            android:gravity="bottom"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20.0"
                        android:singleLine="true"
                        android:text="Thông tin cá nhân"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/title_text_size" />

                    <ImageButton
                        android:id="@+id/bt_edit_personal_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80.0"
                        android:background="@drawable/ripple"
                        android:padding="5.0dip"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:weightSum="10.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.0"
                        android:singleLine="true"
                        android:text="Email ID"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/sub_title_text_size" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_email_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/colorTextSub"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:weightSum="10.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.0"
                        android:singleLine="true"
                        android:text="Điện thoại"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/sub_title_text_size"  />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_sdt_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/colorTextSub"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:weightSum="10.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.0"
                        android:singleLine="true"
                        android:text="Địa chỉ"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/sub_title_text_size"  />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_address_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/colorTextSub"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:weightSum="10.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.0"
                        android:singleLine="true"
                        android:text="Ngày sinh"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/sub_title_text_size"  />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_birthday_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/colorTextSub"
                        android:textSize="14.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="5.0dip"
                    android:weightSum="10.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7.0"
                        android:singleLine="true"
                        android:text="Giới tính"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/sub_title_text_size"  />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_gender_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.0"
                        android:singleLine="false"
                        android:text=""
                        android:textColor="@color/colorTextSub"
                        android:textSize="14.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_skill_job_profile"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/border_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20.0"
                        android:singleLine="true"
                        android:text="Khả năng"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/title_text_size" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/bt_add_skill_job_profile"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ripple"
                        android:layout_weight="80.0"
                        android:clickable="true"
                        android:text="Thêm"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <android.support.v7.internal.widget.ListViewCompat
                    android:id="@+id/lv_skill_job_profile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@color/colorItemList"
                    android:cacheColorHint="#00000000"
                    android:clipToPadding="true"
                    android:dividerHeight="1.0dip"
                    android:drawSelectorOnTop="false"
                    android:listSelector="@android:color/transparent"
                    android:soundEffectsEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln_experience_job_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/border_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100.0">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20.0"
                        android:singleLine="true"
                        android:text="Nguyện vọng công việc"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/title_text_size" />

                    <ImageButton
                        android:id="@+id/bt_edit_expect_user"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80.0"
                        android:background="@drawable/ripple"
                        android:padding="5.0dip"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_user_expect"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7.0"
                    android:hint="Miêu tả nguyện vọng về công việc mà bạn muốn"
                    android:textColor="@color/colorText"
                    android:textSize="15.0dip" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>