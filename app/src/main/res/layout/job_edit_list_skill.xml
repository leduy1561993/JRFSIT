<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:ShowIn = "@layout/activity_job_edit_list_skill"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ListEditSkillActivity">
    <android.support.v7.internal.widget.ListViewCompat
        android:id="@+id/lv_edit_skill_job_profile"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:dividerHeight="1dp"
        android:cacheColorHint="#0000"
        android:clipToPadding="true"
        android:soundEffectsEnabled="true"
        android:scrollbars="none"
        android:listSelector="@android:color/transparent">
    </android.support.v7.internal.widget.ListViewCompat>
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:gravity="bottom"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btCancel_job_edit_list_skill"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/ripple"
            android:padding="10dp"
            android:text="Hủy"
            android:textColor="#FF5722"
            android:textSize="20dp" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btSave_job_edit_list_skill"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/ripple"
            android:padding="10dp"
            android:text="Lưu"
            android:textColor="#FF5722"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
