<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorbackgroupwhite"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10sp"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Công việc tư vấn cho bạn"
            android:textColor="@color/colorText"
            android:textSize="@dimen/title_text_size" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Hiển thị danh sách công việc được giới thiệu cho bạn"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sub_title_text_size" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_gravity="center"
            android:src="@drawable/sr_listjobrec"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text=" Khi chọn 1 công việc, sẽ hiển thị màn chi tiết"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sub_title_text_size" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_gravity="center"
            android:src="@drawable/sr_jobdetail"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="30sp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tại đây bạn có thể đánh giá độ phù hợp của công việc với bạn, chia sẻ bạn bè hoặc lưu công việc này lại"
                android:textColor="@color/colorTextSub"
                android:textSize="@dimen/sub_title_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mẹo:"
                    android:textColor="@color/colorText"
                    android:textSize="@dimen/sub_title_text_size" />
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="   Khi đánh giá công việc càng chính xác thì bạn sẽ được giới thiệu công việc càng phù hợp"
                    android:textColor="@color/colorTextSub"
                    android:textSize="@dimen/sub_title_text_size" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>