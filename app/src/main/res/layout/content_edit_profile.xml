<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_weight="10"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Họ Tên:"
                    android:textColor="@color/colorTextSub"
                    android:textSize="14dp" />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/et_name_profile"
                    android:inputType="textPersonName"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorText"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email:"
                    android:textColor="@color/colorTextSub"
                    android:textSize="14dp" />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/et_email_profile"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorText"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số điện thoại"
                    android:textColor="@color/colorTextSub"
                    android:textSize="14dp" />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/et_mobilenumber_profile"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorText"
                    android:inputType="phone"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ:"
                    android:textColor="@color/colorTextSub"
                    android:textSize="14dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="10"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:id="@+id/tv_location__profile"
                        android:autoText="true"
                        android:inputType="text"
                        android:textColor="@color/colorText"
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:padding="15dp" />
                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/bt_location__profile"
                        android:lines="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:background="@drawable/ripple"
                        android:drawableStart="@drawable/ic_search"
                        android:layout_weight="8"
                        android:padding="10dp"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ngày sinh:"
                    android:textColor="@color/colorTextSub"
                    android:textSize="14dp" />
                <android.support.v7.widget.AppCompatEditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/et_birthday_profile"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorText"
                    android:editable="false"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giới tính:"
                    android:textColor="@color/colorTextSub"
                    android:textSize="14dp" />
                <android.support.v7.widget.AppCompatSpinner
                    android:layout_marginTop="5dp"
                    android:id="@+id/sn_gender_profile"
                    android:layout_width="match_parent"
                    android:textColor="@color/colorText"
                    android:editable="false"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    android:touchscreenBlocksFocus="false" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:weightSum="2"
        android:layout_height="match_parent">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btCancel_Profile"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_delete"
            android:background="@drawable/ripple"
            android:padding="10dp"
            android:text="Hủy"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btSave_Profile"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:text="Lưu"
            android:drawableLeft="@drawable/ic_save_ac"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp" />
    </LinearLayout>
</LinearLayout>