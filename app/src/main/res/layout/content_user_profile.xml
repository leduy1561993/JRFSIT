<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".JobProfileActivity"
    tools:showIn="@layout/app_bar_dscv">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#009688"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="10dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:src="@android:drawable/sym_def_app_icon" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/tv_name_user_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="Leduy1561993@gmail.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/colorItemList"
            android:gravity="bottom"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:singleLine="true"
                        android:text="Thông tin cá nhân"
                        android:textColor="#3D5AFE"
                        android:textSize="18dp" />

                    <ImageButton
                        android:id="@+id/bt_edit_personal_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:background="@drawable/ripple"
                        android:padding="5dp"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="10">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:singleLine="true"
                        android:text="Email ID"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_email_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="false"
                        android:text="leduy1561993@gmail.com"
                        android:textColor="@color/colorTextSub"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:weightSum="10">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:singleLine="true"
                        android:text="Điện thoại"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_sdt_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="false"
                        android:text="0909044291"
                        android:textColor="@color/colorTextSub"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:weightSum="10">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:singleLine="true"
                        android:text="Địa chỉ"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_address_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="false"
                        android:text="HCM"
                        android:textColor="@color/colorTextSub"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:weightSum="10">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:singleLine="true"
                        android:text="Ngày sinh"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_birthday_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="false"
                        android:text="15-06-1993"
                        android:textColor="@color/colorTextSub"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:weightSum="10">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="7"
                        android:singleLine="true"
                        android:text="Giới tính"
                        android:textColor="@color/colorText"
                        android:textSize="15dp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/tv_ps_gender_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:singleLine="false"
                        android:text="Nam"
                        android:textColor="@color/colorTextSub"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_skill_job_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:singleLine="true"
                        android:text="Khả năng"
                        android:textColor="#3D5AFE"
                        android:textSize="18dp" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/bt_add_skill_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:background="@drawable/ic_add_skill"
                        android:padding="5dp"
                        android:scaleX="0.7"
                        android:scaleY="0.7"
                        android:textColor="@color/colorTextSub" />
                </LinearLayout>
                    <android.support.v7.internal.widget.ListViewCompat
                        android:id="@+id/lv_skill_job_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawSelectorOnTop="false"
                        android:layout_weight="1"
                        android:background="@color/colorItemList"
                        android:cacheColorHint="#0000"
                        android:clipToPadding="true"
                        android:dividerHeight="1dp"
                        android:listSelector="@android:color/transparent"
                        android:soundEffectsEnabled="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ln_experience_job_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_linear"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="100">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:singleLine="true"
                        android:text="Nguyện vọng công việc"
                        android:textColor="#3D5AFE"
                        android:textSize="17dp" />

                    <ImageButton
                        android:id="@+id/bt_edit_expect_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:background="@drawable/ripple"
                        android:padding="5dp"
                        android:src="@drawable/ic_edit" />
                </LinearLayout>
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_user_expect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:hint="Miêu tả nguyện vọng về công việc mà bạn muốn"
                    android:textColor="@color/colorText"
                    android:textSize="15dp" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text=""
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>